val N = SizeVar("N")

fun(
  ArrayTypeWSWC(Float, N),
  ArrayTypeWSWC(Float, Cst(3)),
  (input, weights) => {
    Map( \(neighbourhood => 
			Reduce(add, 0.0f) o Map( \(tuple => 
				mult.apply(Get(tuple,0),Get(tuple,1))
			)) $ Zip(weights, neighbourhood))) o 
		Slide(3, 1) o Pad(1, 1, Pad.Boundary.Clamp) $ input
  }
)
